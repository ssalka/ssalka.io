{
  "globals": {
    "__DEV__": true,
    "ts-jest": {
      "skipBabel": true
    }
  },
  "rootDir": "../",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts",
    "tsx"
  ],
  "moduleNameMapper": {
    "\\.scss$": "<rootDir>/node_modules/jest-css-modules"
  },
  "moduleDirectories": [
    "node_modules",
    "."
  ],
  "setupFiles": ["<rootDir>/test/setup.js", "jest-canvas-mock"],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "testRegex": "/test/.*\\.spec\\.tsx?$",
  "testURL": "http://localhost/",
  "transform": {
    ".tsx?": "ts-jest"
  },
  "verbose": true
}
